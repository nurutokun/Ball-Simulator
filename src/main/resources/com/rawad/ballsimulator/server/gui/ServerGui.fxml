<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml">
	<center>
		<TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
		<focusTraversable>false</focusTraversable>
			<tabs>
				<Tab text="World">
					<content>
						<StackPane fx:id="canvasContainer">
							<children>
								<Canvas fx:id="canvas" width="${canvasContainer.width}" height="${canvasContainer.height}" />
							</children>
						</StackPane>
					</content>
				</Tab>
					<Tab text="Players">
						<content>
							<TableView>
								<columns>
									<TableColumn maxWidth="Infinity" minWidth="-1.0" prefWidth="-1.0" text="Username" />
									<TableColumn maxWidth="Infinity" minWidth="-1.0" prefWidth="-1.0" text="Info" />
									<TableColumn maxWidth="Infinity" minWidth="-1.0" prefWidth="-1.0" text="Ping" />
								</columns>
								<columnResizePolicy>
									<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
								</columnResizePolicy>
							</TableView>
						</content>
					</Tab>
				<Tab text="Console" >
					<content>
						<BorderPane>
							<center>
								<TextArea fx:id="consoleOutput" prefColumnCount="0" prefRowCount="0" editable="false" />
							</center>
							
							<bottom>
								<TextField fx:id="consoleInput" onAction="#handleConsoleInput" />
							</bottom>
						</BorderPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
	
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Options">
					<items>
						<CheckMenuItem fx:id="debugChanger" mnemonicParsing="false" text="Debug" />
						<MenuItem mnemonicParsing="false" text="Close" onAction="#requestClose" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	
</BorderPane>