<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<fx:root type="StackPane" xmlns:fx="http://javafx.com/fxml" >
	<GridPane alignment="CENTER">
		
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
			<ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
			<ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="30.0" />
			<ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
			<ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
		</columnConstraints>
		
		<rowConstraints>
			<RowConstraints vgrow="ALWAYS" />
			<RowConstraints percentHeight="7.0" valignment="CENTER" vgrow="ALWAYS" />
			<RowConstraints percentHeight="7.0" valignment="CENTER" vgrow="ALWAYS" />
			<RowConstraints percentHeight="7.0" valignment="CENTER" vgrow="ALWAYS" />
			<RowConstraints percentHeight="7.0" valignment="CENTER" vgrow="ALWAYS" />
			<RowConstraints vgrow="ALWAYS" />
		</rowConstraints>
		
		<children>
			<Button fx:id="btnWorldEditor" mnemonicParsing="false" text="World Editor" GridPane.columnIndex="2" GridPane.rowIndex="1" maxWidth="Infinity" />
			<TextField fx:id="ipHolder" promptText="Server IP Address" GridPane.columnIndex="2" GridPane.rowIndex="2" maxWidth="Infinity" />
			<Button fx:id="btnControls" mnemonicParsing="false" text="Controls" GridPane.columnIndex="2" GridPane.rowIndex="3" maxWidth="Infinity" />
			<Button fx:id="btnMainMenu" mnemonicParsing="false" text="Main Menu" GridPane.columnIndex="2" GridPane.rowIndex="4" maxWidth="Infinity" />
		</children>
		
	</GridPane>
</fx:root>