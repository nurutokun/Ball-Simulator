<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<fx:root type="StackPane" xmlns:fx="http://javafx.com/fxml/1" >
	
	<BorderPane>
		
		<center>
			<TableView fx:id="controlsDisplay">
				
				<columns>
					<TableColumn fx:id="columnAction" text="Action" />
					<TableColumn fx:id="columnInput" text="Input" />
				</columns>
				
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				
			</TableView>
		</center>
		
		<bottom>
			
			<VBox alignment="CENTER" >
				
				<Button fx:id="btnOptions" text="Options" />
				<Button fx:id="btnMainMenu" text="Main Menu" />
				
			</VBox>
			
		</bottom>
		
	</BorderPane>
	
</fx:root>

