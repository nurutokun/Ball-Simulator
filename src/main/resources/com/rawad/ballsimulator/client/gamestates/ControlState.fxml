<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<fx:root type="StackPane" xmlns:fx="http://javafx.com/fxml/1" >
	
	<VBox alignment="CENTER" >
		
		<TableView fx:id="controlTable" >
			
			<columns>
				<TableColumn fx:id="actionColumn" text="Action" />
				<TableColumn fx:id="bindingColumn" text="Button" />
			</columns>
			
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			
		</TableView>
		
		<HBox alignment="CENTER" VBox.vgrow="ALWAYS" >
			
			<VBox alignment="CENTER" >
				<Button fx:id="btnOptions" text="Options" />
				<Button fx:id="btnMainMenu" text="Main Menu" />
			</VBox>
			
			<Button fx:id="btnAdd" text="Add" />
			<Button fx:id="btnRemove" text="Remove" />
			
		</HBox>
		
	</VBox>
	
</fx:root>

